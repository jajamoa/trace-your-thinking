# MongoDB connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority&appName=<app-name>

# OpenAI API Key (required for Whisper speech-to-text)
OPENAI_API_KEY=sk-...

# Base URL for the application (used for Open Graph and Twitter card images)
# In development, this is usually http://localhost:3000
# In production, replace with your actual domain (e.g., https://yourdomain.com)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Python API Configuration (Flask backend endpoint)
PYTHON_BACKEND_URL=http://localhost:5000

# Admin Authentication password
ADMIN_PASSWORD=your-admin-password
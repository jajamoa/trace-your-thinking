# === OpenAI API Configuration ===
# Required for features like Whisper or GPT access
OPENAI_API_KEY=

# === App Configuration ===
# Base URL of the frontend app (used in metadata and links)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# === Python Backend (LLM Reasoning Engine) ===
# Local or deployed URL for the Python backend API
PYTHON_BACKEND_URL=http://localhost:5001
# Alternative deployed version (optional)
# PYTHON_BACKEND_URL=https://trace-your-thinking.onrender.com

# === Admin Access Control ===
# Password for accessing admin-only features (optional)
ADMIN_PASSWORD=

# === Optional LLM Provider (e.g., DashScope) ===
# Alternative key if using third-party LLMs (e.g., Alibaba DashScope)
DASHSCOPE_API_KEY=

# === Default Interview Topic ===
# Used to pre-set the chatbot or UI with a specific domain context
NEXT_PUBLIC_RESEARCH_TOPIC=
# MongoDB connection string
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=app-name"

# OpenAI API Key (required for Whisper speech-to-text)
OPENAI_API_KEY="your-openai-api-key"

# Base URL for the application (used for Open Graph and Twitter card images)
# In development, this is localhost:3000
# In production, replace with your actual domain
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Application Settings
# Next Auth secret is required for authentication (generate with `openssl rand -base64 32`)
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Optional: Vercel analytics
# VERCEL_ANALYTICS_ID="" 